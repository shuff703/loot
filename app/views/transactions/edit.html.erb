<h2>Edit Transaction</h2>
<%= form_for([@budget, @transaction]) do |f| %>
    <p>
        <%= f.label :recipient %><br>
        <%= f.text_field :recipient %>
    </p>
    <p>
        <%= f.label :amount %><br>
        <%= f.text_area :amount %>
    </p>
    <p>
        <%= f.label :category %><br>
        <%= f.text_area :category %>
    </p>
    <p>
        <%= f.label :date %><br>
        <%= f.date_field :date %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', budgets_path %>