<%= render 'header' %>

<div class="row justify-content-center NewSection">
  <div class="col-4 card">
    <div class="card-block">
      <h2 class="text-center">Join Loot Today!</h2>
      
      <% if @account.errors.any? %>
        <div style='color:red;'>
          <h4>
            <%= pluralize(@account.errors.count, 'Error') %>
          </h4>
          <ul>
            <% @account.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_for @account do |f| %>
        <div class="form-group">
          <%= f.text_field :username, :placeholder => "Desired Username", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, :placeholder => "Desired Password", class: "form-control"  %>
        </div>
        <%= f.submit 'Create Account', class: 'btn btn-primary btn-sm' %>
        <%= link_to 'Back', login_path, class: 'btn btn-outline-primary btn-sm float-right' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'footer' %>

