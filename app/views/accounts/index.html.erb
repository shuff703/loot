<html>
    <head>
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Comfortaa" />
    </head>
    <body>
        <header>
            <h1>Loot</h1>
        </header>
        <main>
            <h2>Log In</h2>
            <%= form_for :account, :url => sign_in_path(@account) do |f| %>
                    <%= f.label 'Username: ' %>
                    <%= f.text_field :username %>
                    
                    <%= f.label 'Password: ' %>
                    <%= f.text_field :password %>
                    
                    <button><%= f.submit 'Sign In' %></button>
            <% end %>
            
            <p>OR</p>
            
            <span><button><%= link_to 'Sign Up', new_account_path %></button></span>
        </main>
        <footer>
            <span>&copy; Loot 2017</span>
            <span id="team">Scott Huff, Cory Johnson, Son Huynh &amp; Chris Stump</span>
        </footer>
    </body>
    
</html>
